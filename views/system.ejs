<form id="systemCommandForm" class="form-inline" role="form" method="POST" action="/settings/systemCommand">
	<div class="form-group">
		<label for="command">Command:</label>
		<select name="action" class="form-control">
		<% for (var i = 0, len = systemCommands.length; i < len; i++) { %>
			<option value="<%= i %>"><%= systemCommands[i] %></option>
		<% } %>
		</select>
	</div>
	<div class="form-group">
		<label for="timeout">In:</label>
		<input name="timeout" type="number" class="form-control" placeholder="seconds" value="0">
	</div>
	<button type="submit" class="btn btn-default">Perform</button>
</form>

<div class="modal fade" id="systemCommandConfirmModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
       			<h4 class="modal-title">Confirm action</h4>
            </div>
            <div class="modal-body">
                <p id="systemCommandConfirmModal_text"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="systemCommandConfirmModal_perform" class="btn btn-danger btn-ok" data-dismiss="modal">Perform</button>
            </div>
        </div>
    </div>
</div>

<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
<script src="javascripts/system.js"></script>
