<form id="systemCommandForm" class="form-inline" role="form" method="POST" action="/settings/systemCommand">
	<div class="form-group">
		<label for="command">Command:</label>
		<select name="action" class="form-control">
		<% for (var i = 0, len = systemCommands.length; i < len; i++) { %>
			<option value="<%= i %>"><%= systemCommands[i] %></option>
		<% } %>
		</select>
	</div>
	<div class="form-group">
		<label for="timeout">In:</label>
		<input name="timeout" type="number" class="form-control" placeholder="seconds" value="0">
	</div>
	<button type="submit" class="btn btn-default">Perform</button>
</form>

<script src="javascripts/system.js"></script>
